image: kernai/refinery-parent-images:{{#if build.tag}}{{build.tag}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: kernai/refinery-parent-images:{{#if build.tag}}{{build.tag}}-{{/if}}mini-amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: kernai/refinery-parent-images:{{#if build.tag}}{{build.tag}}-{{/if}}mini-arm64
    platform:
      architecture: arm64
      os: linux
      variant: v8
